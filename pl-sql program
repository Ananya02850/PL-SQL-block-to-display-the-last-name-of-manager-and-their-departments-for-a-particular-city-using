CREATE TABLE MGR(FNAME VARCHAR(10), LNAME VARCHAR(10), DEPT VARCHAR(20), CITY VARCHAR(10));
INSERT INTO MGR VALUES('ALEX', 'JOHNSON', 'SALES', 'TOKYO');
INSERT INTO MGR VALUES('BILL', 'TRUMP', 'DEVELOPMENT', 'DENVER');
INSERT INTO MGR VALUES('JOHN', 'CLINT', 'DEVELOPMENT', 'OSLO');
INSERT INTO MGR VALUES('JOHN', 'CENA', 'FINISHING', 'HELSINKI');
INSERT INTO MGR VALUES('ROMAN', 'REIGNS', 'PURCHASE', 'TOKYO');
INSERT INTO MGR VALUES('JONATHON', 'JAMES', 'TUNING', 'DENVER');
INSERT INTO MGR VALUES('ALBERT', 'HAWKER', 'MEDIA', 'DENVER');
INSERT INTO MGR VALUES('BEAR', 'GRYLLS', 'LAW', 'OSLO');

DECLARE
  CURSOR CUR(DEF_CITY VARCHAR DEFAULT 'DENVER') IS 
    SELECT LNAME, DEPT, CITY FROM MGR 
    WHERE CITY = DEF_CITY; 
  REC CUR%ROWTYPE; 
BEGIN 
  OPEN CUR;
    LOOP FETCH CUR INTO REC;
      EXIT WHEN CUR%NOTFOUND; 
      DBMS_OUTPUT.PUT_LINE('LAST NAME: ' || REC.LNAME || '   DEPARTMENT: ' || REC.DEPT || '    CITY: ' || REC.CITY);
    END LOOP; 
  CLOSE CUR;
END;

